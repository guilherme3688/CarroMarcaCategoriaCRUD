<table class="table table-striped">
    <thead class="thead-light">
        <tr>
            <th>Ações</th>
            <th>Id</th>
            <th>Nome Marca</th>
            <th>Data de cadastro</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: Marcas">
        <tr>
            <td>
                <button class="btn btn-info" data-bind="click: $root.Editar">
                    <span class="fa fa-pen-to-square"></span> Editar
                </button>
            </td>
            <td data-bind="text: Id"></td>
            <td data-bind="text: NomeMarca"></td>
            <td data-bind="text: DataCadastro"></td>
        </tr>
    </tbody>
</table>
