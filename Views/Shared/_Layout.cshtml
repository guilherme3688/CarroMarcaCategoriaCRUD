<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetoCarro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/fontawasome-all.min.css" />
    <link rel="stylesheet" href="~/ProjetoCarro.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @Html.Partial("_Menu")
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted footer">
        <div class="container">
            &copy; @DateTime.Now.Year - by Guilherme Silva
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/knockout-3.5.1.js"></script>
    <script src="~/js/knockout.mapping-latest.js"></script>
    <script src="~/js/moment.js"></script>
    <script src="~/js/jquery-3.7.1.min.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
