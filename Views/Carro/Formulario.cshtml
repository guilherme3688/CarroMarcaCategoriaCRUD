<div id="formulario-carro">
    <h2>Cadastro de Veículo</h2>
    <br />
    <div class="menu">
        <div></div>
        <button type="submit" class="btn btn-dark" data-bind="click: Novo">
            <span class="fa fa-pencil"></span> Novo
        </button>
        <button type="submit" class="btn btn-primary" data-bind="click: Salvar, enable: PodeSalvar">
            <span class="fa fa-floppy-disk"></span> Salvar
        </button>
        <button type="submit" class="btn btn-danger" data-bind="click: Excluir, visible: TemId">
            <span class="fa fa-trash"></span> Excluir
        </button>
    </div>
    <br />
    <div class="alert alert-success" role="alert" data-bind="visible: TemMensagem">
        <span data-bind="text: Success"></span>
    </div>
    <div class="alert alert-danger" role="alert" data-bind="visible: TemErro">
        <span data-bind="text: Error"></span>
    </div>
    <form>
        <div class="row">
            <div class="col-lg-4">
                <label for="id">Código:</label>
                <input type="text" class="form-control" data-bind="value: Id, enable: false" name="Id">
            </div>
            <div class="col-lg-4">
                <label for="dataCadastro">Data de Cadastro:</label>
                <input type="text" class="form-control" data-bind="value: DataCadastro, enable: false" name="DataCadastro">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-4">
                <label for="modelo">Modelo:</label>
                <input type="text" class="form-control" placeholder="Informe o modelo" data-bind="value: Modelo" name="Modelo" maxlength="50">
            </div>
            <div class="col-lg-4">
                <label for="ano">Ano de Lançamento:</label>
                <input type="text" class="form-control" placeholder="Informe o ano de lançamento" data-bind="value: AnoLancamento" name="AnoLancamento" maxlength="4">
            </div>
            <div class="col-lg-4">
                <label for="IdMarca">Marca:</label>
                <select class="form-select" data-bind="options: Marcas, optionsText: 'nome', optionsValue: 'id', value: IdMarca" name="IdMarca"></select>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-4 ">
                <label for="IdCategoria">Categoria:</label>
                <select class="form-select" data-bind="options: Categorias, optionsText: 'nome', optionsValue: 'id', value: IdCategoria" name="IdCategoria"></select>
            </div>            
        </div>
    </form>
</div>
<br />
